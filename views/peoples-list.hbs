<div class="row">
    {{#each peoples as |people|}}
    <div class="col-lg-3 col-md-6 p-3">
        <div class="card" style="width: 18rem;">
            <img src="{{picture}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{country}}</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-capitalize">{{gender}}</li>
                <li class="list-group-item">{{dob}}</li>
            </ul>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <a href="/peoples/{{id}}" class="btn btn-sm btn-outline-secondary">View</a>
                        <a href="/peoples/{{id}}/edit" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <button type="button" value="{{id}}" class="btn btn-sm btn-outline-secondary btn-delete-people">Delete</button>
                    </div>
                    <small class="text-muted">{{nationality}}</small>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>


<script src="/js/peoples-list.js"></script>