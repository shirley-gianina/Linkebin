{{#with people}}
<div class="mt-3">
    <div class="row">        
        <input type="text" class="form-control" hidden value="{{id}}" id="id">
        <div class="col-md-12 form-group mb-3">
            <label>Name</label>
            <input type="text" class="form-control" value="{{name}}" id="name">
        </div>
        <div class="col-md-12 form-group mb-3">
            <label>Image</label>
            <input type="text" class="form-control" value="{{picture}}" id="picture">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Email address</label>
            <input type="email" class="form-control" value="{{email}}" id="email">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Phone Number</label>
            <input type="text" class="form-control" value="{{phone}}" id="phone">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Gender</label>
            <input type="text" class="form-control" value="{{gender}}" id="gender">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Birthdate</label>
            <input type="text" class="form-control" value="{{dob}}" id="dob">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Country</label>
            <input type="text" class="form-control" value="{{country}}" id="country">
        </div>
        <div class="col-md-6 form-group mb-3">
            <label>Nationality</label>
            <input type="text" class="form-control" value="{{nationality}}" id="nationality">
        </div>
         <div class="col-md-6 form-group mb-3">
            <label>City</label>
            <input type="text" class="form-control" value="{{city}}" id="city">
        </div>
         <div class="col-md-3 form-group mb-3">
            <label>State</label>
            <input type="text" class="form-control" value="{{state}}" id="state">
        </div>
         <div class="col-md-3 form-group mb-3">
            <label>Zipcode</label>
            <input type="text" class="form-control" value="{{postcode}}" id="postcode">
        </div>
         <div class="col-md-12 form-group mb-3">
            <label>Street</label>
            <input type="text" class="form-control" value="{{street}}" id="street">
        </div>
    </div>
    <button id="submit-edit-btn" class="btn btn-primary">Submit</button>
</div>
{{/with}}

<script src="/js/peoples-edit.js"></script>